{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    "rules": {
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
        "react/prefer-stateless-function": "warn",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["webpack.*.babel.js"]}]
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./webpack.config.babel.js"
            }
        }
    }
}
